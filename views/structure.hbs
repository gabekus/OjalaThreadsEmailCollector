<div id='loading'>
</div>

<div id='table-title'>
    <div class='centerContainer' id='logoContainer'>
    <img id='ojalaLogo' src='/static/images/OjalaLogo.png'/>
    </div>
    <div class='centerContainer' id='buttons'>
    <a id='downloadAnchor' href='./download'>
        <button id='download'>
            <i class='fa fa-cloud-download-alt'></i> Download .csv
        </button>
    </a>
    </div>
    <table class='table-fill'>
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>
            {{#each emails}}
            <tr class='row' id='row-{{this.Email}}'>
            <td class='name'>{{this.Name}}</td>
                <td class='email'>{{this.Email}}
                    <a>
                        <button onclick='deleteUser("{{this.Email}}")' class='deleteButton'><i class='fa fa-trash'></i> Delete</button>
                    </a>
                </td>
            {{/each}}
            </tr>
        </tbody>
    </table>
</div>
